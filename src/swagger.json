{
  "openapi": "3.0.0",
  "info": {
    "title": "Kanban (To-Do List/Trello)",
    "version": "1.0.0",
    "description": "Documentação da API para a aplicação Kanban."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor de desenvolvimento"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Project": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID auto-incrementável do projeto",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "Nome do projeto",
            "example": "Projeto da UniAnchieta"
          }
        }
      },
      "Task": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID auto-incrementável da tarefa",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "Nome da tarefa",
            "example": "Desenhar a página inicial"
          },
          "status": {
            "type": "string",
            "description": "Status da tarefa",
            "enum": ["pending", "in_progress", "done"],
            "default": "pending",
            "example": "pending"
          },
          "projectId": {
            "type": "integer",
            "description": "ID do projeto ao qual a tarefa pertence",
            "example": 1
          }
        }
      },
      "UserCredentials": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": {
            "type": "string",
            "description": "Nome de usuário do usuário",
            "example": "seu_nome_de_usuario"
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "Senha do usuário",
            "example": "sua_senha"
          }
        }
      },
      "AuthToken": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "Token de autenticação JWT",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "summary": "Registrar um novo usuário",
        "tags": ["Autenticação"],
        "requestBody": {
          "description": "Dados de registro do usuário",
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserCredentials" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário registrado com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SuccessMessage" }
              }
            }
          },
          "409": {
            "description": "Nome de usuário já está em uso"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Autenticar um usuário e obter um token JWT",
        "tags": ["Autenticação"],
        "requestBody": {
          "description": "Credenciais do usuário para autenticação",
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserCredentials" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Autenticação bem-sucedida",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthToken" }
              }
            }
          },
          "401": {
            "description": "Falha na autenticação"
          }
        }
      }
    },
    "/projects": {
      "post": {
        "summary": "Criar um novo projeto",
        "tags": ["Projetos"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "Objeto de projeto a ser criado",
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Project" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Projeto criado com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Project" }
              }
            }
          },
          "400": {
            "description": "Entrada inválida"
          }
        }
      },
      "get": {
        "summary": "Recuperar todos os projetos",
        "tags": ["Projetos"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista de projetos recuperada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Project" }
                }
              }
            }
          }
        }
      }
    },
    "/projects/{id}/tasks": {
      "post": {
        "summary": "Adicionar uma nova tarefa a um projeto",
        "tags": ["Tarefas"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do projeto",
            "required": true,
            "schema": { "type": "integer" },
            "example": 1
          }
        ],
        "requestBody": {
          "description": "Objeto de tarefa a ser adicionado",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Nome da tarefa",
                    "example": "Desenhar a página inicial"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Tarefa adicionada com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Task" }
              }
            }
          },
          "400": {
            "description": "Entrada inválida"
          }
        }
      },
      "get": {
        "summary": "Recuperar todas as tarefas de um projeto",
        "tags": ["Tarefas"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do projeto",
            "required": true,
            "schema": { "type": "integer" },
            "example": 1
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de tarefas recuperada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Task" }
                }
              }
            }
          },
          "404": {
            "description": "Projeto não encontrado"
          }
        }
      }
    },
    "/projects/{projectId}/tasks/{taskId}": {
      "put": {
        "summary": "Atualizar uma tarefa dentro de um projeto",
        "tags": ["Tarefas"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "description": "ID do projeto",
            "required": true,
            "schema": { "type": "integer" },
            "example": 1
          },
          {
            "name": "taskId",
            "in": "path",
            "description": "ID da tarefa",
            "required": true,
            "schema": { "type": "integer" },
            "example": 1
          }
        ],
        "requestBody": {
          "description": "Dados atualizados da tarefa",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Nome atualizado da tarefa",
                    "example": "Atualizar o design da página inicial"
                  },
                  "status": {
                    "type": "string",
                    "description": "Status atualizado da tarefa",
                    "enum": ["pending", "in_progress", "done"],
                    "example": "in_progress"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tarefa atualizada com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Task" }
              }
            }
          },
          "404": {
            "description": "Tarefa ou projeto não encontrado"
          }
        }
      },
      "delete": {
        "summary": "Excluir uma tarefa de um projeto",
        "tags": ["Tarefas"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "description": "ID do projeto",
            "required": true,
            "schema": { "type": "integer" },
            "example": 1
          },
          {
            "name": "taskId",
            "in": "path",
            "description": "ID da tarefa",
            "required": true,
            "schema": { "type": "integer" },
            "example": 1
          }
        ],
        "responses": {
          "200": {
            "description": "Tarefa excluída com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessMessage"
                },
                "example": {
                  "message": "Tarefa excluída com sucesso"
                }
              }
            }
          },
          "404": {
            "description": "Tarefa ou projeto não encontrado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" },
                "example": { "error": "Tarefa não encontrada" }
              }
            }
          }
        }
      }
    }
  }
}
